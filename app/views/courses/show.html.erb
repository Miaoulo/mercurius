<h1 class="center">
    <%= @course.name %>
    <% if @course.lecturer %>
        <small class="lecturer-subtitle">
            <%= t(:by) %>
            <%= link_to @course.lecturer.name, @course.lecturer %>
        </small>
    <% end %>
</h1>
<p>
    <%= t(:semester) %>
    <%= @course.semester %>
</p>
<%= link_to 'PDF', @course.ects_url %>
<ul>
    <% @course.programmes.each do |programme| %>
        <li><%= link_to programme.name, programme %>
            <%= link_to "Op studiegids", programme.url %></li>
    <% end %>
</ul>
<%= render 'course_pdf' %>
<%= link_to "Back", :back %>
